{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es5", "es6", "es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node16",
    "rootDirs": ["./", "./src", "!tmp"],
    "typeRoots": ["./types", "./@types", "node_modules/@types"],
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": ["src", "tests/index.test.ts"],
  "exclude": ["node_modules", "**/tests/*", "coverage", ".nyc_output", "tmp", "**/tmp/*"]
}

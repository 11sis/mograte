{
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "noImplicitAny": false,
    "allowJs": true,
    "lib": ["ES2015"],
    "target": "ES2015",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["*.ts"],
  "exclude": [
    "node_modules"
  ]
}
